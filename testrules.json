{
  "test_patterns": {
    "unit": ["test_*.py", "*_test.py", "unit_test_*.py"],
    "integration": ["integration_test_*.py", "*_integration_test.py"],
    "e2e": ["e2e_test_*.py", "*_e2e_test.py"],
    "regression": ["regression_test_*.py", "*_regression_test.py"],
    "sample": ["test_sample.py", "test_clean.py", "test_timing_demo.py", "test_with_failures.py"]
  },
  "test_groups": {
    "all": [
      "test_sample",
      "test_clean", 
      "test_timing_demo",
      "test_with_failures",
      "unit_test_calculator",
      "integration_test_database",
      "e2e_test_workflow",
      "regression_test_legacy"
    ],
    "basic": [
      "test_sample",
      "test_clean"
    ],
    "demo": [
      "test_timing_demo",
      "test_with_failures"
    ],
    "comprehensive": [
      "unit_test_calculator",
      "integration_test_database",
      "e2e_test_workflow",
      "regression_test_legacy"
    ],
    "fast": [
      "test_sample",
      "test_clean",
      "unit_test_calculator"
    ],
    "slow": [
      "test_timing_demo",
      "integration_test_database",
      "e2e_test_workflow"
    ],
    "calculator": [
      "unit_test_calculator"
    ],
    "database": [
      "integration_test_database"
    ],
    "workflow": [
      "e2e_test_workflow"
    ],
    "legacy": [
      "regression_test_legacy"
    ]
  },
  "coverage_enabled": true,
  "html_coverage": true,
  "html_coverage_dir": "htmlcov",
  "coverage_config": {
    "source": ["."],
    "omit": [
      "*/tests/*",
      "*/test_*",
      "*/__pycache__/*",
      "*/venv/*",
      "*/env/*",
      "setup.py"
    ],
    "include": ["*.py"],
    "exclude_lines": [
      "pragma: no cover",
      "def __repr__",
      "if self.debug:",
      "if settings.DEBUG",
      "raise AssertionError",
      "raise NotImplementedError",
      "if 0:",
      "if __name__ == .__main__.:"
    ]
  },
  "lint_config": {
    "enabled": true,
    "max_line_length": 88,
    "ignore": ["E203", "W503"],
    "exclude": [
      ".git",
      "__pycache__",
      "build",
      "dist",
      "*.egg-info",
      "venv",
      "env"
    ]
  },
  "reporting": {
    "verbose": false,
    "show_timing": true,
    "show_coverage_summary": true,
    "show_individual_results": true,
    "emoji_output": true,
    "color_output": true
  },
  "execution": {
    "fail_fast": false,
    "parallel": false,
    "timeout": 300,
    "retry_failed": false,
    "retry_count": 1
  },
  "discovery": {
    "recursive": true,
    "follow_symlinks": false,
    "ignore_patterns": [
      "__pycache__",
      "*.pyc",
      ".git",
      ".pytest_cache",
      "node_modules"
    ]
  }
}